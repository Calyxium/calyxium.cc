---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---
<Header />
<body>
    <main class="main">
        <div class="editor">
            <div class="editor-header">
                <span class="title">The Calyxium Playground</span>
                <div class="controls">
                    <select class="dropdown">
                        <option>Calyxium 0.01</option>
                    </select>
                    <button class="btn btn-run" onclick="runCode()">Run</button>
                    <button class="btn">Format</button>
                    <button class="btn">Share</button>
                </div>
            </div>
            <div class="code-editor-container">
                <div class="line-numbers"></div>
                <textarea class="code-area" spellcheck="false">
# You can edit this code!
# Click here and start typing.
                </textarea>
            </div>
            <div class="output-container">
                <pre class="output"></pre>
            </div>
        </div>
    </main>
</body>
<Footer />
<style>
    .output {
        background-color: #1c2833;
        color: #c5c8c6;
        font-family: monospace;
        padding: 15px;
        margin-top: 20px;
        border-radius: 5px;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        scroll-behavior: smooth;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background: radial-gradient(ellipse at bottom, #0d1d31 0%, #0c0d13 100%);
        color: #ffffff;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .main {
        display: flex;
        justify-content: center;
        padding: 20px;
    }

    .editor {
        background-color: #2c3e50;
        width: 100%;
        max-width: 800px;
        border-radius: 5px;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    }

    .editor-header {
        display: flex;
        justify-content: space-between;
        padding: 15px;
        background-color: #34495e;
        border-bottom: 1px solid #444;
    }

    .title {
        font-size: 18px;
    }

    .controls {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .dropdown, .btn, .input {
        background-color: #34495e;
        border: 1px solid #555;
        color: #fff;
        padding: 5px 10px;
        border-radius: 3px;
        font-size: 14px;
    }

    .btn {
        cursor: pointer;
    }

    .code-editor-container {
        display: flex;
        background-color: #1c2833;
        border-top: 1px solid #444;
        overflow: hidden;
    }

    .line-numbers {
        padding: 15px 10px;
        background-color: #2c3e50;
        color: #5d6d7e;
        text-align: right;
        user-select: none;
    }

    .code-area {
        width: 100%;
        height: 300px;
        background-color: #1c2833;
        color: #c5c8c6;
        font-family: monospace;
        padding: 15px;
        border: none;
        resize: none;
        font-size: 14px;
        line-height: 1.5;
        outline: none;
    }

    .code-area:focus {
        outline: none;
    }
</style>
