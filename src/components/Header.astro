---
import { Image } from "astro:assets";
import MyImportedImage from '../assets/calyxium-header.webp'
---

<header>
    <div class="container">
        <div class="logo">
            <a href="/">
                <Image src={MyImportedImage} alt="Calyxium Header"></>
            </a>
        </div>
        <nav>
            <ul>
                <li><a href="/docs/">Learn</a></li>
                <li><a href="/community/">Explore</a></li>
                <li><a href="/about/">About</a></li>
            </ul>
        </nav>

        <!-- Form added around the search-bar -->
        <form id="searchForm" class="search-bar">
            <input type="text" id="searchInput" placeholder="Search for a package">
            <span class="search-icon">&#128269;</span>
        </form>
    </div>

    <style>
        header {
            background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(9,9,121,1) 48%,  rgba(96,0,255,1) 100%);
            color: white;
            padding: 15px 0;
        }

        .container {
            width: 90%;
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        header .container {
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
        }

        .logo img {
            display: block;
            height: 45px; 
            margin-top: 5px;
            width: 50px;
            margin-right: 25px;
        }

        nav ul {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
            gap: 20px;
        }

        nav ul li a {
            color: white;
            text-decoration: none;
            font-weight: bold;
        }

        .search-bar {
            position: relative;
            display: flex;
            align-items: center;
            margin-left: auto;
        }

        .search-bar input {
            padding: 10px 40px 10px 20px;
            border-radius: 20px;
            border: none;
            outline: none;
            font-size: 16px;
            width: 350px;
            background-color: #fff;
        }

        .search-bar .search-icon {
            position: absolute;
            right: 10px;
            font-size: 20px;
            color: #007d9c;
        }
    </style>

    <script>
        document.getElementById('searchForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const searchInput = (document.getElementById('searchInput') as HTMLInputElement).value.trim().toLowerCase();
            
            if (searchInput) {
                window.location.href = `/pkg/${encodeURIComponent(searchInput)}`;
            }
        });
    </script>
</header>
